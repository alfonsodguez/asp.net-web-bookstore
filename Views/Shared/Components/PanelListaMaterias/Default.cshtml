@model List<Materia>
<div class="list-group">
    @{ 
        foreach (Materia item in Model)
        {
            <a class="list-group-item list-group-item-action"
               asp-controller="Tienda" asp-action="Libros"
               asp-all-route-data="@(new Dictionary<String, String> {  
                    { "id", item.IdMateria +"_"+ item.IdMateriaPadre +"_"+ item.NombreMateria.Split(";")[1].ToString()}
            })">
                @item.NombreMateria.Split(";")[0].ToString()
            </a>
        }
    }
</div>

